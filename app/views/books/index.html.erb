<table>
  <h1>Books</h1>
  <thead>
    <tr>
      <th style = "width: 20%">title</th>
      <th style = "width: 40%">body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ"  %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: @book do |f| %>
<table>
  <h1>New Book</h1>
    <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
  <tbody>
    <tr>
      <td>Title</td>
    </tr>
    <tr>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <td>Body</td>
    </tr>
    <tr>
      <td><%= f.text_area :body %></td>
    </tr>
    <tr>
      <td><%= f.submit "Create Book" %></td>
    </tr>
  </tbody>
</table>
<% end %>